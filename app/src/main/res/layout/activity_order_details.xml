<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productDescriptionDrawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".OrderDetails"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/productDescriptionNav_bar"
        android:layout_width="wrap_content"
        android:background="@drawable/background_mobile"
        android:layout_height="match_parent"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshMain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_mobile"
            tools:context=".MainActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/bar_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.025">

                <ImageView
                    android:id="@+id/productDescriptionMenu_btn"
                    android:layout_width="45dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/menu_black" />

                <ImageView
                    android:id="@+id/productDescriptionLogo"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/kisaraa" />

                <ImageView
                    android:id="@+id/productDescriptionSearch_btn"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.956"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.666"
                    app:srcCompat="@drawable/search" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/pageScrollView"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:scrollbars="none"
                android:background="@drawable/default_color_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productDescriptionCard"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="5dp">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/productDescriptionMainLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/orderDetailsTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:gravity="center"
                                        android:maxHeight="26sp"
                                        android:minHeight="20sp"
                                        android:text="Order Details"
                                        android:textColor="@color/black"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.498"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.043" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <TextView
                                            android:id="@+id/orderDetRowTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Order name : "
                                            android:textAlignment="viewEnd"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/orderDetRowValue"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowTitle3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Shipping Address : "
                                            android:textAlignment="textEnd"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/orderDetRowValue3"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowTitle"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowValue2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Value"
                                            android:textColor="#000000"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.645"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowValue3"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowValue3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Value"
                                            android:textColor="#000000"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.645"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowValue"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowTitle2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Seller Address : "
                                            android:textAlignment="textEnd"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/orderDetRowValue2"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowTitle3"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowTitle4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Order date : "
                                            android:textAlignment="textEnd"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/orderDetRowValue4"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowTitle2"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowValue4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Value"
                                            android:textColor="#000000"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.645"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowValue2"
                                            app:layout_constraintVertical_bias="0.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowTitle5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Expected delivery date : "
                                            android:textAlignment="textEnd"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/orderDetRowValue5"
                                            app:layout_constraintHorizontal_bias="1.0"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowTitle4"
                                            app:layout_constraintVertical_bias="1.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowValue5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Value"
                                            android:textColor="#000000"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.648"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/orderDetRowValue4"
                                            app:layout_constraintVertical_bias="1.0" />

                                        <TextView
                                            android:id="@+id/orderDetRowValue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:forceHasOverlappingRendering="true"
                                            android:padding="10dp"
                                            android:text="Value"
                                            android:textAlignment="textEnd"
                                            android:textColor="#000000"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.645"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintVertical_bias="0.0" />


                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </ScrollView>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>
