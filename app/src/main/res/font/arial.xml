<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/arial_regular"
        android:fontStyle="normal"

        app:font="@font/arial_regular"
        app:fontStyle="normal"
        tools:targetApi="o" />

    <!-- italic -->
    <font
        android:font="@font/arial_italic"
        android:fontStyle="italic"

        app:font="@font/arial_italic"
        app:fontStyle="italic"
        tools:targetApi="o" />

    <!-- bold -->
    <font
        android:font="@font/arial_bold"
        android:fontWeight="700"

        app:font="@font/arial_bold"
        app:fontWeight="700"
        tools:targetApi="o" />

</font-family>